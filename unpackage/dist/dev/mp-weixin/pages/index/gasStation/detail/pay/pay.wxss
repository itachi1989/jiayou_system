.pay {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0rpx;
  box-shadow: -20px 10px 20px #a9a9a9;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.pay .sum {
  font-size: 28rpx;
  font-weight: 400;
  margin-left: 24rpx;
}
.pay .sum .price {
  font-size: 40rpx;
  font-weight: 600;
  color: #32cd32;
}
.pay .submit {
  width: 350rpx;
  height: 70%;
  background-color: #32cd32;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
