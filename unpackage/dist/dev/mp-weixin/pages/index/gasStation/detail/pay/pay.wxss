.container {
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
}
.container .info {
  width: 95%;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
}
.container .info .name {
  font-size: 40rpx;
  font-weight: 900;
}
.container .info .distance {
  font-size: 24rpx;
  color: #d3d3d3;
  margin-top: 10rpx;
}
.container .info .address {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.container .info .takeway {
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 24rpx;
}
.container .info .takeway .label {
  font-size: 28rpx;
}
.goods_container {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods_container .good_list {
  width: 100%;
  height: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.goods_container .good_list .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.goods_container .good_list .center {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 24rpx 10rpx;
  font-size: 30rpx;
  font-weight: 900;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
