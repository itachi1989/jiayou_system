	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.orderContainerActive{
	position: absolute;
	height:144rpx;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
	left:50%;
	-webkit-animation: clickGood 1s;
	        animation: clickGood 1s;
}
@-webkit-keyframes clickGood{
0%{
		width:50rpx;
		background-color:rgba(0,0,0,0.3);
}
90%{
		width:100%;
}
}
@keyframes clickGood{
0%{
		width:50rpx;
		background-color:rgba(0,0,0,0.3);
}
90%{
		width:100%;
}
}
.wave{
	background-color:rgba(0,0,0,0.3);
	position:fixed;
	z-index: 1000;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	border-radius: 50%;
	-webkit-animation:onshow 0.7s;
	        animation:onshow 0.7s
}
@-webkit-keyframes onshow{
0%{
		width:25rpx;
		height:25rpx;
}
90%{
		width:100rpx;
		height:100rpx;
}
100%{
		width:100rpx;
		height:100rpx;
		opacity: 0;
}
}
@keyframes onshow{
0%{
		width:25rpx;
		height:25rpx;
}
90%{
		width:100rpx;
		height:100rpx;
}
100%{
		width:100rpx;
		height:100rpx;
		opacity: 0;
}
}


